@model IEnumerable<QuanLyBanHang_TapHoa.Models.LOAISANPHAM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Home/HomeLayout.cshtml";
}

<div style="margin: 10px auto; width: 40%;">
    <h2 style="text-align: center">THÔNG TIN LOẠI SẢN PHẨM</h2>
    <p>
        @Html.ActionLink("TẠO MỚI", "Create", null, new
        {
            @class = "btn btn-primary"
        })
    </p>
    <table class="table">
        <tr>
            <th>
                MÃ LOẠI SẢN PHẨM
            </th>
            <th>
                TÊN LOẠI SẢN PHẨM
            </th>

            <th>
                THAO TÁC
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaLSP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenLSP)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { MaLSP = item.MaLSP }, new
                    {
                    @class = "btn btn-success"
                    }) |
                    @Html.ActionLink("Chi tiết", "Details", new { MaLSP = item.MaLSP },
                    new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Xóa", "Delete", new { MaLSP = item.MaLSP }, new
                    {
                    @class = "btn btn-danger"
                    })
                </td>
            </tr>
        }
        @Html.ActionLink("Index", "SANPHAM")
    </table>
</div>

